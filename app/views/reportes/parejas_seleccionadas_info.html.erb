<div id="pareja-lista-repo">
  <h3>Informaci√≥n parejas seleccionadas - <%= Date.today ("%d/%m/%Y") %></h3>

  <table>
	<th></th>
	<th>No.</th>
	<th>Esposo</th>
	<th>Esposa</th>
	<th>celular_el</th>
	<th>celular_ella</th>
	<th>telef_casa</th>

	<% @parejas.each do |pareja| %>
    <tr class="<%= cycle('lista-linea-impar', 'lista-linea-par-repo') %>">

		<td>
			<%= image_tag pareja.foto.url (:thumb)%> </dd>
		</td>
      <td>
		<dl>
			<dt><%=h pareja.codigo %></dt>
			<dd>id: <%=h pareja.id %></dd>
		</dl>
      </td>

		<% eventos = pareja.eventos %>
		<% fch_ultimo_evento = eventos.maximum(:fecha)%>


      <td>
        <dl>
          <dt><%=h pareja.nom_el %></dt>
			<dd>1era Asamb.<%=h pareja.fch_1era_asamblea%> </dd>
			<dd>Retiro 1: <%=h pareja.retiro1%> </dd>
         </dl>
      </td>

      <td>
        <dl>
          <dt><%=h pareja.nom_ella %></dt>
         <dd>Asist.(<%=h eventos.count %>) <%= fch_ultimo_evento%></dd>
        </dl>
      </td>

      <td>
        <%=h pareja.movil_el %>
      </td>
      <td>
        <%=h pareja.movil_ella %>
      </td>

       <td>
		<dl>
        	<dd><%=h pareja.tel_casa %></dd>
			<dd><%=h pareja.residencia %></dd>
		</dl>
      </td>



    </tr>
  <% end %>
  </table>
</div>

