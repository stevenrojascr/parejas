<div id="pareja-lista-repo">
  <h5>Registro de Asistencia - <%= @fch_proximo_viernes.strftime("%d/%m/%Y") %></h5>

  <table>
	<th>No.</th>
	<th>Hoy</th>
	<th>Esposo</th>
	<th>Esposa</th>
	<th>Foto</th>

	<% @parejas.each do |pareja| %>
    <tr class="<%= cycle('lista-linea-impar-repo', 'lista-linea-par-repo') %>">

      <td>
		<%=h pareja.codigo %>
      </td>

      <td>
      </td>

      <td>
        <%=h pareja.nom_el %>
      </td>

      <td>
        <%=h pareja.nom_ella %>
      </td>

      <td>
		<% if pareja.foto_file_size.nil? then %>
			<%=h "No"%>
		<% else %>
			<% if pareja.foto_file_size < 20000 then %>
				<%=h "No"%>
			<% else %>
				<%=h "Ya"%>
			<% end %>
		<% end %>
      </td>
	<td>
		<% if pareja.id == @pareja_llevo_virgen then%>
			<%=h "Traen Virgen"%>
		<% end %>
	</td>


    </tr>
  <% end %>
  </table>
</div>

