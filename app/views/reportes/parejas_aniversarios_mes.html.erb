<div id="pareja-lista">
  <h3>Reporte de Aniversarios del Mes. ( <%= Date.today.strftime("%d/%m/%Y") %> )</h3>

 <h4>I. ANIVERSARIOS DE MATRIMONIO</h4>
 
  <table>
	<th>No de Pareja</th>
	<th>Esposo</th>
	<th>Esposa</th>
	<th>Fecha de Matrimonio</th>

	<% @parejas_aniv_matrimonio.each do |pareja| %>
    <tr class="<%= cycle('lista-linea-impar', 'lista-linea-par-repo') %>">

      <td>
		<%=h pareja.codigo %>
      </td>

      <td>
        <%=h pareja.nom_el %>
      </td>

      <td>
        <%=h pareja.nom_ella %>
      </td>

      <td>
        <%=h pareja.fch_matrimonio.strftime("%d/%m/%Y")%>
      </td>

    </tr>
  <% end %>
  </table>

