<!DOCTYPE html>
<html>
<head>
  <title>Parejas</title>
<!-- START:stylesheet -->
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "parejas", :media => "all" %>
<!-- END:stylesheet -->
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

	<div id="banner">
		<%= image_tag("logo_matrimonios.jpg")%>
		<%= @page_title || "Matrimonios en Victoria - Pozos"%>
		<table>
		  <tr>
			<td> <%= link_to 'Parejas', parejas_path %> </td>
			<td> <%= link_to 'Asambleas', eventos_path %> </td>
			<td> <%= link_to 'Hoja de Asistencia', hoja_asistencia_path (:format => "pdf") %> </td>
			<td> <%= link_to 'Reporte de Parejas Activas', parejas_activas_path (:format => "pdf") %> </td>
			<td> <%= link_to 'InformaciÃ³n de Parejas Activas', parejas_activas_info_path (:format => "pdf") %> </td>
			<td> <%= link_to 'Aniversarios del Mes', aniversarios_mes_path %> </td>
		  </tr>
		</table>
	</div>
	
	<div id="user_nav">
	  <% if user_signed_in? %>
	    Usuario <%= current_user.email %>.
	    <%= link_to "Salir", destroy_user_session_path %>
	  <% else %>
	    <%= link_to "Registrarse", new_user_registration_path %> o <%= link_to "Ingresar", new_user_session_path %>
	  <% end %>
	</div>
	
	<%= yield %>

</body>
</html>
