<%= form_for(@pareja) do |f| %>
  <% if @pareja.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pareja.errors.count, "error") %> Datos de pareja no pasa validación:</h2>

      <ul>
      <% @pareja.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :Código %><br />
    <%= f.text_field :codigo %>
  </div>
  <div class="field">
    <%= f.label :Fecha_1era_asamblea %><br />
    <%= f.date_select :fch_1era_asamblea %>
  </div>

	<fieldset>
		<legend> DATOS DEL ESPOSO</legend>
		<div class="field">
			<%= f.label :Nombre %><br />
			<%= f.text_field :nom_el %>
		</div>
		<div class="field">
			<%= f.label :Fecha_de_nacimiento %><br />
			<%= f.date_select :fch_nac_el %>
		</div>
		<div class="field">
			<%= f.label :Ocupación %><br />
			<%= f.text_field :ocupacion_el %>
		</div>
		<div class="field">
			<%= f.label :Teléfono_celular %><br />
			<%= f.text_field :movil_el %>
		</div>
		<div class="field">
			<%= f.label :Correo_electrónico %><br />
			<%= f.text_field :email_el %>
		</div>
	</fieldset>

	<fieldset>
		<legend> DATOS DE LA ESPOSA</legend>
		<div class="field">
			<%= f.label :Nombre %><br />
			<%= f.text_field :nom_ella %>
		</div>
		<div class="field">
		  <%= f.label :Fecha_de_nacimiento %><br />
		  <%= f.date_select :fch_nac_ella %>
		</div>
		<div class="field">
		  <%= f.label :Ocupación %><br />
		  <%= f.text_field :ocupacion_ella %>
		</div>
		<div class="field">
		  <%= f.label :Teléfono_celular %><br />
		  <%= f.text_field :movil_ella %>
		</div>
		<div class="field">
		  <%= f.label :Correo_electrónico %><br />
		  <%= f.text_field :email_ella %>
		</div>
	</fieldset>

	<fieldset>
		<legend> DATOS DE AMBOS </legend>
		<div class="field">
		  <%= f.label :Lugar_de_residencia %><br />
		  <%= f.text_field :residencia %>
		</div>
		<div class="field">
		  <%= f.label :Teléfono_de_la_casa %><br />
		  <%= f.text_field :tel_casa %>
		</div>
		<div class="field">
		 <%= f.label :Fecha_de_matrimonio %><br />
		 <%= f.date_select :fch_matrimonio %>
		</div>
	</fieldset
	
	<fieldset>
		<legend> OTROS DATOS </legend>
		<div class="field">
		  <%= f.label :Cantidad_de_hijos %><br />
		  <%= f.text_field :hijos_vivos %>
		</div>
		<div class="field">
		  <%= f.label :Cantidad_de_perdidas %><br />
		  <%= f.text_field :perdidas %>
		</div>
		<div class="field">
		  <%= f.label :Invitados_por %><br />
		  <%= f.text_field :invitados_por %>
		</div>
		<div class="field">
		  <%= f.label :Ministerio %><br />
		  <%= f.text_field :ministerio %>
		</div>
		<div class="field">
		  <%= f.label :retiro1 %><br />
		  <%= f.check_box :retiro1 %>
		</div>
		<div class="field">
		  <%= f.label :retiro2 %><br />
		  <%= f.check_box :retiro2 %>
		</div>
		<div class="field">
		  <%= f.label :retiro3 %><br />
		  <%= f.check_box :retiro3 %>
		</div>
		<div class="field">
		  <%= f.label :retiro4 %><br />
		  <%= f.check_box :retiro4 %>
		</div>
	</fieldset>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
